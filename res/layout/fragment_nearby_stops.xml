<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="it.reyboz.bustorino.fragments.NearbyStopsFragment">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nearby_stops_message" android:id="@+id/titleTextView"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:layout_marginBottom="15dp" android:layout_marginTop="10dp"
            android:gravity="center_horizontal" android:layout_margin="10dp"/>
    <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_below="@+id/titleTextView"
            android:id="@+id/stopGridNearby"
            android:clickable="true"
            android:columnWidth="100dp"
            android:numColumns="auto_fit" android:stretchMode="columnWidth"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:focusable="true" android:visibility="gone"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingBar"
            android:paddingTop="10dp"
            android:progressDrawable="@color/blue_700" android:indeterminate="true"
            android:indeterminateTint="@color/blue_700"
            android:layout_below="@+id/titleTextView" android:layout_centerHorizontal="true"/>
    <TextView
            android:text="@string/no_stops_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/noStopsTextView"
            android:visibility="gone"
            android:layout_below="@+id/titleTextView" android:layout_centerHorizontal="true" android:textSize="16sp"
            android:layout_marginTop="20dp"
    />

</RelativeLayout>
