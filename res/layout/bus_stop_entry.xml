<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/busStopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/busStopID"
        android:gravity="center_vertical"
        android:text="Bus Stop Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/blue_500" />

    <TextView
        android:id="@+id/busStopID"
        android:layout_width="70dip"
        android:layout_height="70dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bus_stop_background"
        android:gravity="center"
        android:text="BusStopID"
        android:textColor="@color/grey_100"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/vehicleIcon"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignLeft="@+id/busStopName"
        android:layout_below="@+id/busStopName"
        android:background="@drawable/bus"
        android:gravity="center" />

    <TextView
        android:id="@+id/busLineNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/busStopName"
        android:layout_toLeftOf="@+id/busStopID"
        android:layout_toRightOf="@+id/vehicleIcon"
        android:gravity="center_vertical"
        android:text="Bus Line Names"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue_700" />

</RelativeLayout>