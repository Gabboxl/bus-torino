<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="65dip"
    android:padding="5dip" >

    <TextView
        android:id="@+id/busLineIcon"
        android:background="@drawable/bus_background"
        android:layout_width="54dip"
        android:layout_height="54dip"
        android:gravity="center"
        android:text="666"
        android:textColor="#FFF6DF"
        android:textSize="21sp" >
    </TextView>
    
    <TextView
        android:id="@+id/vehicleIcon"
        android:background="@drawable/bus"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:gravity="center"
        android:layout_toEndOf="@id/busLineIcon"
        android:layout_toRightOf="@id/busLineIcon"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
    </TextView>
	    
    <TextView
        android:id="@+id/busLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/busLineIcon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/busLineIcon"
        android:layout_marginLeft="5dip"
        android:layout_marginStart="5dip"
        android:layout_toEndOf="@id/vehicleIcon"
        android:layout_toRightOf="@id/vehicleIcon"
        android:gravity="center_vertical"
        android:text="Timelines example"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0099CC" >
    </TextView>

</RelativeLayout>